{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "es2020",
    "outDir": "./dist/out-tsc",
    "baseUrl": "src/",
    "paths": {
      "@commonComponents/*": ["app/commonComponents/*"],
      "@basicClasses/*": ["app/basicClasses/*"],
      "@portalBasicClasses/*": ["app/portalBasicClasses/*"],
      "@env/*": ["environments/*"]
    },
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "typeRoots": ["node_modules/@types", "node_modules/@typed-mxgraph"],
    "lib": ["es2020", "dom"],
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },

  "angularCompilerOptions": {
    "debug": true,
    "enableIvy": true,
    "strictTemplates": false
  }
}
